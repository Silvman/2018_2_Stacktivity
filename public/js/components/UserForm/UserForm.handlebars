<form class="user_form" id="{{id}}" method="post">
	<div class="error main hidden common_error">{{commonError}}</div>

	{{#fields}}
		<fieldset {{#if validationType}}class="validate"{{/if}}>
			<input class="input_block {{validationType}}" name="{{name}}" type="{{type}}" placeholder="{{placeholder}}" />
			<span class="error hidden">{{error}}</span>
		</fieldset>
	{{/fields}}

	<button class="submit" formnovalidate>{{submitText}}</button>
</form>