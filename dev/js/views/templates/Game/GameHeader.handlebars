<div class="game-header__circle">
    <a class="game-header__link" href="/" data-href="/">
        Left game
    </a>

    <div class="game-header__decsription">
        <div class="description__status js-game-status">
            {{#if mult}}
                <div class="status__header">Draw!</div>
                <div class="status__desc">there should be timer</div>
            {{else}}
                <div class="status__header">{{player.username}}</div>
                <div class="status__desc">{{player.score}}</div>
            {{/if}}
        </div>
    </div>
</div>
